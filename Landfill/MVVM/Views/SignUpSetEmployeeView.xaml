<UserControl x:Class="Landfill.MVVM.Views.SignUpSetEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Landfill.MVVM.ViewModels"
             mc:Ignorable="d"
             Height="500"
             Width="600"
             Background="AliceBlue"
             d:DataContext="{d:DesignInstance vm:SignUpSetEmployeeViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="120,69,0,0"
                   TextWrapping="Wrap"
                   Height="20"
                   RenderTransformOrigin="0.655,0.575">
            <Run Text="Имя" />
            <Run Text="*"
                 Foreground="Red" />
        </TextBlock>

        <TextBox Text="{Binding EmployeeInfo.FirstName, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Width="268"
                 TextBlock.FontSize="16"
                 Margin="0,59,0,0"
                 Height="40"
                 Padding="10 7 10 0" />

        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="88,123,0,0"
                   TextWrapping="Wrap"
                   Height="20">
            <Run Text="Фамилия" />
            <Run Text="*"
                 Foreground="Red" />
        </TextBlock>

        <TextBox Text="{Binding EmployeeInfo.LastName, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Width="268"
                 TextBlock.FontSize="16"
                 Margin="0,113,0,0"
                 Height="40"
                 Padding="10 7 10 0" />

        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="88,181,0,0"
                   TextWrapping="Wrap"
                   Height="20">
            <Run Text="Отчество" />
        </TextBlock>

        <TextBox Text="{Binding EmployeeInfo.MiddleName, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Width="268"
                 TextBlock.FontSize="16"
                 Margin="0,171,0,0"
                 Height="40"
                 Padding="10 7 10 0" />

        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="35,260,0,0"
                   TextWrapping="Wrap"
                   Height="20">
            <Run Text="Номер телефона" />
            <Run Text="*"
                 Foreground="Red" />
        </TextBlock>

        <TextBox Text="{Binding EmployeeInfo.Phone, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Width="268"
                 TextBlock.FontSize="16"
                 Margin="0,250,0,0"
                 Height="40"
                 Padding="10 7 10 0" />

        <Button Command="{Binding SignUpCommand}"
                Content="Зарегистрироваться"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,370,0,0"
                Height="38"
                Width="304"
                FontSize="18"
                Background="Green" />

        <TextBlock Text="Назад"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,430,0,0"
                   TextAlignment="Center"
                   Style="{StaticResource HoverUnderlineStyle}">
            <TextBlock.InputBindings>
                <MouseBinding Command="{Binding PreviousStepCommand}"
                              MouseAction="LeftClick" />
            </TextBlock.InputBindings>
        </TextBlock>

    </Grid>
</UserControl>
