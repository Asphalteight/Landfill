<UserControl x:Class="Landfill.MVVM.Views.SignUpSetEmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Landfill.MVVM.ViewModels"
             xmlns:custom="clr-namespace:Landfill.MVVM.Views.CustomControls"
             mc:Ignorable="d" 
             Height="700"
             Width="1000"
             Background="AliceBlue"
             d:DataContext="{d:DesignInstance vm:SignUpSetEmployeeViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <TextBlock
            Text="Имя"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="15"
            Margin="360,202,0,0" 
            TextWrapping="Wrap"
            Height="20"/>
        
        <custom:CustomTextBox 
            Text="{Binding EmployeeInfo.FirstName, UpdateSourceTrigger=PropertyChanged}"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="218" 
            TextBlock.FontSize="16"
            Margin="403,192,0,0"
            Height="40"
            Padding="10 7 10 0"/>
        
        <TextBlock 
            Text="{Binding ErrorMessage.Login}" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="413,232,0,0"
            TextWrapping="Wrap" 
            TextAlignment="Left" 
            Foreground="Red"
            Width="208"
            FontSize="12"/>
        
        <custom:CustomButton
            Command="{Binding SignUpCommand}"
            Content="Зарегистрироваться"
            VerticalAlignment="Top" 
            HorizontalAlignment="Center"
            Margin="0,452,0,0" 
            Height="38" Width="304" 
            FontSize="18"
            Background="Green"/>

        <TextBlock 
            Text="Назад" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,514,0,0" 
            TextAlignment="Center"
            Style="{StaticResource HoverUnderlineStyle}">
            <TextBlock.InputBindings>
                <MouseBinding Command="{Binding PreviousStepCommand}" MouseAction="LeftClick"/>
            </TextBlock.InputBindings>
        </TextBlock>
        
    </Grid>
</UserControl>
